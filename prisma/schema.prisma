model User {
  id         BigInt        @id @default(autoincrement())
  username   String?
  email      String    @unique
  password   String
  demands    Demand[]
  personalId Int?      @unique
  personal   Personal?
}

model Personal {
  id       BigInt       @id @default(autoincrement())
  name     String
  gender   String?
  age      Int?
  location String?
  skills   String[]
  user     User     @relation(fields: [userId], references: [id])
  userId   BigInt       @unique
}

model Demand {
  id           BigInt       @id @default(autoincrement())
  // status           String
  created_time DateTime @default(now())
  English      String
  Chinese      String
  demandRole  DemandRole @default(FREE)

  User   User? @relation(fields: [userId], references: [id])
  userId BigInt ?
}

model Category {
  id BigInt  @id @default(autoincrement())
}

enum DemandRole {
  NEED
  SERVER
  FREE
}
