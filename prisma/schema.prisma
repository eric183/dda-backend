generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Widget {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

model User {
  id         Int       @id @default(autoincrement())
  username   String?
  email      String    @unique
  password   String
  demands    Demand[]
  personalId Int?      @unique
  personal   Personal?
  demanRole  DemanRole @default(FREE)
}

model Personal {
  id       Int      @id @default(autoincrement())
  name     String
  gender   String?
  age      Int?
  location String?
  skills   String[]
  user     User     @relation(fields: [userId], references: [id])
  userId   Int      @unique
}

model Demand {
  id           Int      @id @default(autoincrement())
  // status           String
  created_time DateTime @default(now())
  English      String
  Chinese      String

  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Category {
  id Int @id @default(autoincrement())
}

enum DemanRole {
  NEED
  SERVER
  FREE
}
