generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Widget {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

model User {
  id        String   @id @default(cuid())
  avatar    String?
  username  String?
  email     String   @unique
  password  String
  gender    String?
  demands   Demand[]
  // contactId  String?  @unique // 将 contactId 定义为可选字段
  contacts   Contact[]
  matchedDemands String[]
}

model Contact {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Demand {
  id           String       @id @default(cuid())
  created_time DateTime     @default(now())
  end_time     DateTime?
  English      String
  Chinese      String
  demandRole   DemandRole   @default(FREE)
  userId       String?
  categoryType CategoryType
  User         User?        @relation(fields: [userId], references: [id])
  status       DemandStatus 
  place        String
  image        String
}

enum DemandRole {
  NEED
  SERVER
  FREE
}

enum CategoryType {
  Social
  Work
  Home
  Health
  Shopping
  Travel
  Learning
  Entertainment
  Transportation
  Finance
}


