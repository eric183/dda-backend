generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Widget {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

model User {
  id         String    @id @default(cuid())
  username   String?
  email      String    @unique
  password   String
  personalId Int?      @unique
  demands    Demand[]
  personal   Personal?
}

model Personal {
  id       String   @id @default(cuid())
  name     String
  gender   String?
  age      Int?
  location String?
  skills   String[]
  userId   String   @unique
  user     User     @relation(fields: [userId], references: [id])
}

model Demand {
  id           String     @id @default(cuid())
  created_time DateTime   @default(now())
  English      String
  Chinese      String
  demandRole   DemandRole @default(FREE)
  userId       String?
  User         User?      @relation(fields: [userId], references: [id])
  categoryId   String?
  category     Category?  @relation(fields: [categoryId], references: [id])
}

model Category {
  id      String   @id @default(cuid())
  name    String
  demands Demand[]
}

enum DemandRole {
  NEED
  SERVER
  FREE
}
