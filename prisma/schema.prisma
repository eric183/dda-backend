generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Widget {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
}

model User {
  id             String   @id @unique @default(cuid())
  username       String?
  verified       Boolean  @default(false)
  verifiedCode   String?
  email          String   @unique
  password       String
  gender         String?
  avatar         String?
  matchedDemands String[]
  contacts       Contact?
  demands        Demand[]
}

model Contact {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Demand {
  id           String       @id @default(cuid())
  created_time DateTime     @default(now())
  English      String
  Chinese      String
  demandRole   DemandRole   @default(FREE)
  userId       String?
  categoryType CategoryType
  end_time     DateTime?
  status       DemandStatus
  title        String
  images       String[]
  placeId      String?
  place        Place?       @relation(fields: [placeId], references: [id])
  User         User?        @relation(fields: [userId], references: [id])
}

model Place {
  id        String   @unique @default(cuid())
  latitude  Float
  longitude Float
  name      String   @unique
  Demand    Demand[]
}

enum DemandRole {
  NEED
  SERVER
  FREE
}

enum CategoryType {
  Social
  Work
  Home
  Health
  Shopping
  Travel
  Learning
  Entertainment
  Transportation
  Finance
}

enum DemandStatus {
  CLOSED
  OPEN
  PENDING
  COMPLETED
}
